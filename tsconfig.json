{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es2016",
      "es2017.object"
    ],
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "sourceRoot": "./src",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true
  }
}
